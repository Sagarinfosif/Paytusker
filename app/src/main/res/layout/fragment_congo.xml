<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/l_congolayout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.CongoFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space230"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="@dimen/space150"
                android:layout_height="@dimen/space150"
                android:src="@drawable/check"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congratulations"
                android:layout_marginTop="@dimen/space10"
                android:textSize="@dimen/space20"
                android:textColor="@color/button_color"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space5"
                android:layout_marginTop="@dimen/space20"
                android:layout_marginVertical="@dimen/space30"
                android:layout_gravity="center_horizontal"
                android:text="Your Profile is\nSuccessfully Verified."
                android:textAlignment="center"
                android:textSize="@dimen/text16"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/done"
                android:layout_marginTop="@dimen/space10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:layout_marginHorizontal="@dimen/space50"
                android:background="@drawable/button_cicle_blue"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>