<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/l_depositlayout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.DepositFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space10"
        android:layout_marginHorizontal="@dimen/space20"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="@dimen/text18"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_marginTop="@dimen/space10"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space20"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_back"
            android:entries="@array/payment_methods"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_arrow"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            app:tint="@color/black" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space10"
        android:layout_marginHorizontal="@dimen/space20"
        android:text="Currency"
        android:textColor="@color/black"
        android:textSize="@dimen/text18"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_marginTop="@dimen/space10"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/space20"
        android:layout_height="wrap_content">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:background="@drawable/spinner_back"
            android:entries="@array/currancy"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_down_arrow"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space10"
        android:layout_marginHorizontal="@dimen/space20"
        android:text="Amount"
        android:textColor="@color/black"
        android:textSize="@dimen/text18"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="15$"
        android:layout_marginTop="@dimen/space10"
        android:padding="@dimen/space16"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:inputType="numberDecimal"
        android:textSize="@dimen/text16"
        android:textAlignment="center"
        android:background="@drawable/spinner_back"
        android:layout_marginHorizontal="@dimen/space20"/>
</LinearLayout>

        <Button
            android:id="@+id/btn_confirm_deposit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/space20"
            android:layout_marginHorizontal="@dimen/space50"
            android:background="@drawable/button_cicle_blue"/>
    </RelativeLayout>
</LinearLayout>