<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/l_registrationlayout"
    android:background="@color/lightgrey"
    android:orientation="vertical"
    tools:context=".Fragments.RegisterationFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space250"
        android:backgroundTint="@color/button_color"></com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space10"
        android:layout_marginTop="-130dp"
        app:cardCornerRadius="@dimen/space20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/space100"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="You need a account to continue"
            android:textSize="@dimen/text16" />

            <Button
                android:id="@+id/number_email_reg"
                android:layout_marginTop="@dimen/space20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailorphone"
                android:textColor="@color/white"
                android:layout_marginHorizontal="@dimen/space30"
                android:background="@drawable/button_cicle_blue"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginVertical="@dimen/space10"
                android:layout_marginHorizontal="@dimen/space20"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space1"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_toLeftOf="@+id/tv_or"
                    android:layout_marginVertical="@dimen/space10"
                    android:background="@color/grey" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:id="@+id/tv_or"
                    android:textStyle="bold"
                    android:textColor="@color/grey"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text14" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space1"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_toRightOf="@+id/tv_or"
                    android:layout_marginVertical="@dimen/space10"
                    android:background="@color/grey" />

            </RelativeLayout>
             <LinearLayout
                android:layout_marginBottom="@dimen/space15"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                 <ImageButton
                     android:padding="@dimen/space8"
                     android:background="@android:color/white"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="@dimen/space5"
                     android:src="@drawable/ic_facebook_1" />
                <ImageButton
                    android:padding="@dimen/space8"
                    android:background="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space5"
                    android:src="@drawable/ic_google_1" />
            </LinearLayout>
            <TextView
                android:id="@+id/privacy_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/space20"
                android:gravity="center_horizontal"
                android:text="@string/intro_reg"
                android:textSize="@dimen/text14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space1"
                android:layout_marginHorizontal="@dimen/space20"
                android:layout_toLeftOf="@+id/tv_or"
                android:layout_marginVertical="@dimen/space10"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="wrap_content"
               android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space10"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/noaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_account"
                android:textColor="@color/black"
                android:textSize="@dimen/text14"/>
            <TextView
                android:id="@+id/register"
                android:layout_toRightOf="@+id/noaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_marginLeft="@dimen/space5"
                android:textColor="@color/button_color"
                android:textStyle="bold"
                android:textSize="@dimen/text14"/>
            </RelativeLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
