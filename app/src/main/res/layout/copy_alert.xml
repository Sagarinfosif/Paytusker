<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space15"
        android:layout_marginVertical="@dimen/space15"
        app:cardCornerRadius="@dimen/space20"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:layout_marginTop="@dimen/space10"
                android:layout_width="@dimen/space100"
                android:layout_height="@dimen/space100"
                android:src="@drawable/copyy"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space15"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Copied!"
                android:textColor="@color/black"
                android:textSize="@dimen/text24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space15"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Address Copied!"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/alert_copy_done"
                android:layout_width="@dimen/space120"
                android:layout_height="wrap_content"
                android:background="@drawable/button_cicle_blue"
                android:text="Ok"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/space10"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>