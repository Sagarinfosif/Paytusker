<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/space280"
    android:layout_gravity="end"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/lightgrey"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close"
            app:tint="@color/grey"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/button_color"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="@dimen/space10"
            android:background="@drawable/circle_background"
            android:src="@drawable/thumb_up">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jatin Sharma"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/nav_dashboard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="DASHBOARD"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_profile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="My Profile"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_activity"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="My Activity"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_wallets"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="My Wallets"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_deposit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Deposit"
                android:textColor="@color/black"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/nav_payout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Payout"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_sendmoney"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Send Money"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_requestmoney"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Request Money"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_exchange"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_double_right_arrow"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="Exchange"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nav_logout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_nav_buttons"
                android:drawableLeft="@drawable/ic_log_out"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:text="LOGOUT"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</com.google.android.material.navigation.NavigationView>